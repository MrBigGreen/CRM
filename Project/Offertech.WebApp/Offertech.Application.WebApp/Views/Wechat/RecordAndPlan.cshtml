            var imglist = "";
            $("#list-img li")
                .each(function () {
                    imglist += $(this).attr("data-src") + ";";
                });
            var param = {
                FollowUpMode: communicateTextRecord.getAttribute("data-value"),
                Contact: contacterTextRecord.innerText,

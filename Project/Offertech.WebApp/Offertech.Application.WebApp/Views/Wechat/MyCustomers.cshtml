            }

            .myCustomers .customer-list .company-cell .cell-left-bottom .company-level {
                font: arial;
                font-size: 13px;
                color: #A3A4A5;
                float: left;
                width: 15%;
                text-align: center;
                margin-left: 5%;
            }

            .myCustomers .customer-list .company-cell .cell-left-bottom .company-location {
                font: arial;
                font-size: 13px;
                color: #A3A4A5;
                float: left;
                width: 25%;
                text-align: center;
                margin-left: 5%;
                /*font: arial;*/
            }

            .myCustomers .customer-list .company-cell .cell-right {
                float: right;
                margin-top: 10px;
                width: 15%;
            }

                .myCustomers .customer-list .company-cell .cell-right .record-btn {
                    margin-top: 10px;
                    font-size: 12px;
                    height: 27px;
                    padding: 0 6px;
                    margin-right: 10px;
                }

        .myCustomers .customer-list .cell-divider {
            background: #EBF2F7;
            height: 10px;
        }

        .mui-search.mui-active:before {
            margin-top: -10px;

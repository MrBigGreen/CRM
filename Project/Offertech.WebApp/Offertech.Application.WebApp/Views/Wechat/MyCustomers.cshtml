            .myCustomers .filter-area li {
                flex: 1;
                font-size: 14px;
                height: 30px;
                margin: 10px 0;
                text-align: center;
                border-right: 1px solid #e5e5e5;
            }

        .myCustomers .search-area {
            height: 50px;
            width: 100%;
            background: #EAF1F8;
            position: relative;
            padding-top: 10px;
            z-index: 10;
        }

            .myCustomers .search-area .mui-search {
                margin: 0px 10px 0px 10px;
            }

            .myCustomers .search-area .search-input {
                background: white;
                height: 30px;

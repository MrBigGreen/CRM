    <link rel="stylesheet" href="~/Content/css/mui.css" />
    <link rel="stylesheet" href="~/Content/css/app.css" />
    <link rel="stylesheet" href="~/Content/css/style.css" />
    <link rel="stylesheet" href="~/Content/css/mui.picker.min.css" />

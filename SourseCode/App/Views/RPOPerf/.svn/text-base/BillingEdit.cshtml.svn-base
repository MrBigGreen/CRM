            for (var i = 0; i < rows.length; i++) {

                var parm = { "BillingDetailsID": rows[i].BillingDetailsID, "BillingID": BillingID, "Category": 2, "CustomerName": rows[i].CustomerName, "BillingAmount": rows[i].BillingAmount }
                $.ajax({
                    url: "/RPOPerf/EditDetails",
                    type: "Post",
                    data: parm,

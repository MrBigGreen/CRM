                    }
                });
            }
            if (flag == rows.length) {

                $.messager.alert("操作提示", "保存成功", "info", function () {
                    $('#dg2').datagrid('acceptChanges');
                });
            }


        }
    }


    function reject2() {
        $('#dg2').datagrid('rejectChanges');
        editIndex2 = undefined;
    }
</script>

<script type="text/javascript">


    $('#dg').datagrid({
        title: '本周实际', //列表的标题
        iconCls: 'icon-edit',
        width: '100%',
        height: 'auto',
        striped: true,
        singleSelect: true,
        url: '/RPOPerf/GetBillingDetails?id=@Model.BillingID&Category=1', //获取数据的url
        idField: 'BillingDetailsID',
        pagination: false,
        toolbar: '#tb1',
        onClickRow: onClickRow1,
    });



    $('#dg2').datagrid({
        title: '下周预计', //列表的标题
        iconCls: 'icon-edit',
        width: '100%',
        height: 'auto',
        striped: true,
        singleSelect: true,
        url: '/RPOPerf/GetBillingDetails?id=@Model.BillingID&Category=2', //获取数据的url
        idField: 'BillingDetailsID',
        sortName: 'BillingDetailsID',
        sortOrder: 'asc',
        pagination: false,
        toolbar: '#tb2',
        onClickRow: onClickRow2,
    });
</script>
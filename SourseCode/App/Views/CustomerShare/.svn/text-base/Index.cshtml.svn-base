@using Common
@using Models
@model CRM.DAL.TB_CustomerShare

@{
    ViewBag.Title = "客户分享";
    Layout = "~/Views/Shared/Index.cshtml";
}
<div style="display:none" id="divQuery">
    <div class="easyui-panel" title="查询栏" iconcls="icon-search" collapsible="true" style="width: 100%; height:auto">
        <table id="ttSearch" class="record" border="0" cellpadding="0" cellspacing="0" style="width: 100%;height:auto ">
            <tr>
                <th style="width:120px; text-align:right; padding-right:10px;height:26px">
                    日期:
                </th>
                <td>
                    <input type="text" id="StartDate" name="StartDate" onclick="WdatePicker({ maxDate: '#F{$dp.$D(\'EndDate\');}', dateFmt: 'yyyy-MM-dd HH:mm:ss' })" />
                    <span>到</span>
                    <input type="text" id="EndDate" name="EndDate" onclick="WdatePicker({ minDate: '#F{$dp.$D(\'StartDate\');}', dateFmt: 'yyyy-MM-dd HH:mm:ss' })" />


                </td>
            </tr>
            <tr>
                <td colspan="2" style="text-align:center">
                    <a href="#" onclick="flexiQuery()" class="easyui-linkbutton" data-options="iconCls:'icon-search'">
                        查 询
                    </a>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                    <a href="#" onclick="RemvoeAll()" class="easyui-linkbutton" data-options="iconCls:'icon-clear'">
                        清 空
                    </a>

                </td>
            </tr>
        </table>
    </div>
</div>
<br style="clear: both;" />
@Html.HiddenFor(m => m.CustomerID)
<table id="flexigridData" style="width: 100%;height:auto"></table>
<br style="clear: both;" />
<table id="ShareHistoryData" style="width: 100%;height:auto"></table>

<div class="easyui-dialog" iconcls="icon-add" style="width: 600px; height: 560px;
      padding: 5px; overflow: auto; " title="" data-options="closed:true">
    <div fit="true" style="height:95%;width:95%">
        <div region="center" border="false" style="padding: 10px;width:100%; height:100%; background: #fff; border: 1px solid #ccc;">
            <iframe frameborder="0" scrolling="no" style="height:100%;width:100%"></iframe>
        </div>
    </div>
</div>
<link href="~/Res/PublicCommon.css" rel="stylesheet" />
<script type="text/javascript" language="javascript">$.getScript("/Scripts/CustomerShare/Index.js")</script>

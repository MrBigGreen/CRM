@using Common
@using Models
@model CRM.DAL.TB_CustomerRating

@{
    ViewBag.Title = "等级评价";
    Layout = "~/Views/Shared/CloseDialog.cshtml";
}

<style>
    textarea {
        height: 160px;
        width: 480px;
    }

    input {
        width: 480px;
    }

    .display-field {
        height: auto;
        width: 500px;
    }
</style>

<div class="bigdiv">
    @Html.HiddenFor(model => model.CustomerID)

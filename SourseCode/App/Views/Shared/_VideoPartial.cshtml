        //}
        $(".video_area2").css({ width: _width, height: _height });
        $(".bpopup_video").css({ height: "auto" });
        var x = $(window).width() / 2 - $(".bpopup_video").width() / 2;
        var num = $(window).height() / 2 - $(".bpopup_video").height() / 2 + $(window).scrollTop();
        var y = num > 0 ? num : 0;
        $(".bpopup_video").bPopup({
            modalClose: false,
            closeClass: 'close',
            follow: [false, false],
            position: [x, y],
            onClose: function () {
                jwplayer().remove();
            }
        }, function () {
            jwplayer("video").setup({
                flashplayer: "../../Scripts/player.swf",
                file: _fileName,
                height: _height,
                width: _width,
                screencolor: "#383838",
                backcolor: "#585858",
                frontcolor: "#b9b9b9",
                autoStart: true,
                controlbar: "bottom",
                stretching: 'exactfit'
            });
        });
    }
   </script>
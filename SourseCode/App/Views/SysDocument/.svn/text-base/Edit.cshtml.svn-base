                   {
                       string item111 = string.Empty;
                       item111 += item11.Id + "&" + item11.Name;
                       if (ids11.Length > 0)
                       {
                           ids11 += "^" + item111;
                       }
                       else
                       {
                           ids11 += item111;
                       }
               
                <table id="@item111"
                    class="deleteStyle">

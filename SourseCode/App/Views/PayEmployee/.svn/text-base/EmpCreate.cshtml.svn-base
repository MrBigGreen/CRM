    }

    .imgDiv {
        position: relative;
        float: left;
        text-align: center;
        margin-right: 15px;
        margin-bottom: 5px;
        width: 149px;
        height: 175px;
    }

        .imgDiv .file-panel {
            position: absolute;
            height: 30px;
            filter: progid:DXImageTransform.Microsoft.gradient(GradientType=0,startColorstr='#80000000', endColorstr='#80000000')\0;
            background: rgba( 0, 0, 0, 0.5 );
            width: 100%;
            top: 0;
            left: 0;
            overflow: hidden;
            z-index: 300;
        }

            .imgDiv .file-panel span.cancel {
                background-position: -48px -24px;
                width: 24px;
                height: 24px;
                display: inline;
                float: right;
                text-indent: -9999px;
                overflow: hidden;
                background: url(/images/icons.png) no-repeat;
                margin: 5px 1px 1px;
                cursor: pointer;
            }

    #imgContainer img {

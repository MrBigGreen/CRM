<script type="text/javascript">

    function ShowCustomer() {
        showWindow("选择客户", "/Customer/ServiceList", 550, 450);
    }

    function ShowSheBao() {
        showWindow("选择社保", "/PaySheBao/SheBaoList", 550, 450);
    }
    function ShowHousingFund() {
        showWindow("选择公积金", "/PayHousingFund/List", 550, 450);
    }
    $('#comCardType').combobox({
        url: '/SysField/GetComboBoxList?ParentID=1604141503590239432048f5e2282',
        valueField: 'Value',
        textField: 'Text',
        editable: false
    });
    $('#comBankName').combobox({
        url: '/SysField/GetComboBoxList?ParentID=1604141504524710001e45c171551',
        valueField: 'Value',
        textField: 'Text',
        editable: false
    });

    $('#comContractType').combobox({
        url: '/SysField/GetComboBoxList?ParentID=1604121151490315992e569f90a1e',
        valueField: 'Value',
        textField: 'Text',
        //editable: false
        filter: function (q, row) { //q：文本框内你输入的值，row：列表数据集合；
            var opts = $(this).combobox('options');

            //统一转换成小写进行比较；==0：匹配首位，>=0：匹配任意位置；
            return row[opts.textField].indexOf(q) >= 0;
        }
    });

    $('#comWagesType').combobox({
        url: '/SysField/GetComboBoxList?ParentID=1604121151490315992e569f90a1e',
        valueField: 'Value',
        textField: 'Text',
        //editable: false
        filter: function (q, row) { //q：文本框内你输入的值，row：列表数据集合；
            var opts = $(this).combobox('options');
            return row[opts.textField].indexOf(q) >= 0;
        }
    });

    $('#comSocialSecurityType').combobox({
        url: '/SysField/GetComboBoxList?ParentID=1604121151490315992e569f90a1e',
        valueField: 'Value',
        textField: 'Text',
        //editable: false
        filter: function (q, row) { //q：文本框内你输入的值，row：列表数据集合；
            var opts = $(this).combobox('options');
            return row[opts.textField].indexOf(q) >= 0;
        }
    });

    $('#comTaxType').combobox({
        url: '/SysField/GetComboBoxList?ParentID=1604121151490315992e569f90a1e',
        valueField: 'Value',
        textField: 'Text',
        //editable: false
        filter: function (q, row) { //q：文本框内你输入的值，row：列表数据集合；
            var opts = $(this).combobox('options');
            return row[opts.textField].indexOf(q) >= 0;
        }
    });

    function Create(parameters) {
        var urlStr = '';
        $('.imgDiv').each(function () {
            urlStr += ';' + $(this).children('img').attr('src');
        });
        $('#HiddPIC').val(urlStr.substr(1));
        var checkFlag = new clsIDCard($('#txtCardID').val());

        if (!checkFlag.IsValid()) {

            $.messager.alert('提示', '证件号验证错误！', "error");
            return false;
        }
        var ph = $('#txtPhoneNum').val();
        if (ph != "") {
            var p = /^1[34578]\d{9}$/;
            if (!p.test(ph)) {
                $.messager.alert('提示', '手机号码验证错误！', "error");
                return false;
            }
        }
        var em = $('#txtEmail').val();
        if (em != "") {
            var e = /^(\w)+(\.\w+)*@@(\w)+((\.\w+)+)$/;
            if (!e.test(em)) {
                $.messager.alert('提示', '邮箱验证错误！', "error");
                return false;
            }
        }
        var comCardType = $('#comCardType').combobox('getValue');

        var comBankName = $('#comBankName').combobox('getValue');

        var comContractType = $('#comContractType').combobox('getValue');
        var comWagesType = $('#comWagesType').combobox('getValue');
        var comSocialSecurityType = $('#comSocialSecurityType').combobox('getValue');
        var comTaxType = $('#comTaxType').combobox('getValue');

        if (comCardType.indexOf("请选择") != -1) {
            $.messager.alert('提示', '请选择证件类型！', "error");
            return false;
        } else {
            $('#IDType').val(comCardType);
        }
        if (comBankName.indexOf("请选择") != -1) {
            $.messager.alert('提示', '请选择银行！', "error");
            return false;
        } else {
            $('#txtBankName').val(comBankName);
        }
        if (comContractType == "") {
            $.messager.alert('提示', '请选择大合同主体！', "error");
            return false;
        } else {
            $('#txtContractType').val(comContractType);
        }
        if (comWagesType == "") {
            $.messager.alert('提示', '请选择工资发放主体！', "error");
            return false;
        } else {
            $('#txtWagesType').val(comWagesType);
        }
        if (comSocialSecurityType == "") {
            $.messager.alert('提示', '请选择社保缴纳主体！', "error");
            return false;
        } else {
            $('#txtSocialSecurityType').val(comSocialSecurityType);
        }
        if (comTaxType == "") {
            $.messager.alert('提示', '请选择个税申报主体！', "error");
            return false;
        } else {
            $('#txtTaxType').val(comTaxType);
        }
        if ($("#SocialInsurID").val() == "") {
            $.messager.alert('提示', '请选择社保类型！', "error");
            return false;
        }
        if ($("#HousingFundID").val() == "") {
            $.messager.alert('提示', '请选择公积金类型！', "error");
            return false;
        }

        $.ajax({
            url: "/PayEmployee/AddInfo",
            type: "Post",
            data: $("#ff").serialize(),
            dataType: "json",
            success: function (data) {
                if ($.messager) {
                    $.messager.alert('操作提示', data, "info", function (r) {
                        parent.$('.easyui-window').window('close');
                        parent.$('.easyui-dialog').dialog('close');

                    });
                }

            },
            error: function () {
                SubmitResult = false;
            }
        });         
    }

     

</script>
